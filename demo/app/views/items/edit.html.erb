<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :itemcode %><br />
    <%= f.text_field :itemcode %>
  </p>
  <p>
    <%= f.label :itemname %><br />
    <%= f.text_field :itemname %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>